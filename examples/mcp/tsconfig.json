    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "outDir": "./build",
    "composite": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../packages/ai"
    },
    {
      "path": "../../packages/openai"
    }
  ]
}
